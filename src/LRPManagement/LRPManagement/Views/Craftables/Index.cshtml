@model IEnumerable<LRPManagement.Models.Craftable>

@{
    ViewData["Title"] = "Item List";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Item Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>

@if (Model.Any())
{
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Form)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Requirement)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Effect)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Materials)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Form)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Requirement)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Effect)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Materials)
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                        <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                        <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <h2>No Players Found.</h2>
    <h3>Service may be unavailable</h3>
}
