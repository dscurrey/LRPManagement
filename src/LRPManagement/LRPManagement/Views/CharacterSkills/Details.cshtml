@model LRPManagement.Models.CharacterSkill

@{
    ViewData["Title"] = "Character Skill Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Details</h1>

<p class="alert-danger">
    @ViewBag.CharacterSkillsError
</p>

<div>
    <h4>Character Skill</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Character)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Character.Name)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Skill)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Skill.Id)
        </dd>
    </dl>
</div>
<div>
