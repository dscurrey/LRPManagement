@model LRPManagement.ViewModels.CharacterDetailsViewModel

@{
    ViewData["Title"] = "Character Details";
}

<h1>Character Details</h1>

<p class="alert-danger">
    @ViewBag.CharactersError
</p>

<div>
    <h4>Character</h4>
    <hr/>
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.FullId)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.FullId)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Xp)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Xp)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.IsActive)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.IsActive)
        </dd>
    </dl>
    <div class="col-sm-5 col-md-7">
        <h5>Skills</h5>
        <p></p>
        <a asp-action="Create" asp-controller="CharacterSkills" asp-route-id="@Model.Id">Add Skill</a>
        @if (Model.Skills.Any())
        {
            <partial name="_CharacterSkills" model="Model.Skills"/>
        }
        else
        {
            <dd class="col-sm-5 col-md-7">
                <p>Character has no assigned skills</p>
            </dd>
        }
    </div>
    <div class="col-sm-5">
        <h5>Items</h5>
        <p></p>
        <a asp-action="Create" asp-controller="Bonds" asp-route-id="@Model.Id">Add Bonded Item</a>
        @if (Model.Items.Any())
        {
            <partial name="_CharacterItems" model="Model.Items"/>
        }
        else
        {
            <dd class="col-sm-10">
                <p>Character has no bonded items</p>
            </dd>
        }
    </div>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>